@page
@model Torneo.App.Frontend.Pages.Partidos.EditModel
@{
}
<h1>Editar Partido</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="partido.FechaHora"></label>
        <input asp-for="partido.FechaHora" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="EquipoSelected"></label>
        <input asp-for="EquipoSelected" asp-items="@Model.EquipoOptions" name="idEquipoLocal" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="partido.MarcadorLocal"></label>
        <input asp-for="partido.MarcadorLocal" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="EquiSelected"></label>
        <input asp-for="EquiSelected" asp-items="@Model.EquiOptions" name="idEquipoVisitante" class="form-control">
    </div>
     <div class="form-group">
        <label asp-for="partido.MarcadorVisitante"></label>
        <input asp-for="partido.MarcadorVisitante" class="form-control" readonly>
    </div>
    <br>
    <button type="submit" class="btn btn-primary btn-block">Actualizar Partido</button>
</form>

<a class="btn btn-secondary" asp-page="./Index">Volver</a>
